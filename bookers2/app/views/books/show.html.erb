<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/userinfo', user: @user %>
      <div class="row">
        <%= link_to '', edit_user_path(current_user.id), class: "btn btn-outline-secondary btn-block fas fa-user-cog" %>
      </div>
      <h2 class="mt-3">New book</h2>
      <%= form_with model:@new_book, local:true do |f| %>
        <div class="form-group">
          <lable for="book_title">Title</label>
          <div><%= f.text_field :title, class: "form-control book_tile" %></div>
        </div>
        <div class="form-group">
          <label for="book_opinion">Opinion</label>
          <div><%= f.text_area :body, class: "form-control book_body" %></div>
        </div>
        <div class="form-group"><%= f.submit 'Create book', class: "btn btn-success" %></div>
      <% end %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg", size: '100x100' %></br>
              <%= link_to @user.name, user_path(@user.id) %>
            </td>
            <td><%= link_to @book.title, book_path(@book.id) %></td>
            <td><%= @book.body %></td>
            <% if @book.user == current_user %>
              <td><%= link_to "Edit", edit_book_path(@book), class: "btn btn-sm btn-success" %></td>
              <td><%= link_to "Destroy", book_path(@book), method: :delete, class: "btn btn-sm btn-danger" %></td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>