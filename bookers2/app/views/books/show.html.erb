<p id="notice"></p>

<div>
  <h2>User info</h2>
  <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
  <table>
    <tbody>
      <tr></tr>
      <tr>
        <th>name</th>
        <th><%= @user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= @user.introduction %></th>
      </tr>
    </tbody>
  </table>

  <div><%= link_to 'Edit', edit_user_path(current_user.id) %></div>

  <h2>New book</h2>
  <%= form_with model:@new_book, local:true do |f| %>
    <div>
      <lable>Title</label>
      <%= f.text_field :title %>
    </div>
    <div>
      <label>Opinion</label>
      <%= f.text_area :body %>
    </div>
    <div><%= f.submit 'Create book' %></div>
  <% end %>
</div>

<div>
 <h1>Book detail</h1>
 <table>
   <tbody>
     <tr>
       <td>
         <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></br>
         <%= @user.name %>
       </td>
       <td><%= @book.title %></td>
       <td><%= @book.body %></td>
       <% if @book.user == current_user %>
       <td><%= link_to "Edit", edit_book_path(@book) %></td>
       <td><%= link_to "Destroy", book_path(@book), method: :delete %></td>
       <% end %>
     </tr>
   </tbody>
 </table>
</div>