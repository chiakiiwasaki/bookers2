<div class="container px-5 px-sm-0">
  <% if @new_book.errors.any? %>
  <div id="error_explanation">
    <h3><%= @new_book.errors.count %> error prohibited this obj from being saved:</h3>
    <ul>
    <% @new_book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
  <% end %>

  <div class="row">
    <div class="col-md-3">
      <%= render 'users/userinfo', user: @user %>
      <div class="row">
        <%= link_to '', edit_user_path(current_user.id), class: 'btn btn-outline-secondary btn-block fas fa-user-cog' %>
      </div>
      <h2 class="mt-3">New book</h2>
      <%= form_with model:@new_book, local:true do |f| %>
        <div class="form-group">
          <lable for="book_title">Title</label>
          <div><%= f.text_field :title, class: 'form-control book_title' %></div>
        </div>
        <div class="form-group">
          <label for="book_opinion">Opinion</label>
          <div><%= f.text_area :body, class: 'form-control book_body' %></div>
        </div>
        <div class="form-group"><%= f.submit 'Create Book', class: 'btn btn-success' %></div>
      <% end %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
        <% @books.each do |book| %>
          <tr>
            <td><%= link_to attachment_image_tag(book.user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg", size: '50x50'), user_path(book.id) %></td>
            <td><%= link_to book.title, book_path(book.id) %></td>
            <td><%= book.body %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>