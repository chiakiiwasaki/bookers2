<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <%= form_with model:@user, local:true do |f| %>
        <div class="form-group">
          <label for="user-name">Name</label>
          <div><%= f.text_field :name, class: 'form-control name' %></div>
        </div>
        <div class="form-group">
          <label for="user-image">Image</label>
          <div><%= f.attachment_field :profile_image %></div>
        </div>
        <div class="form-group">
          <label for="user_introduction">Introduction</label>
          <div><%= f.text_area :introduction, class: 'form-control introduction' %></div>
        </div>
        <div><%= f.submit "Update User", class: 'btn btn-secondary' %></div>
      <% end %>
    </div>
  </div>
</div>