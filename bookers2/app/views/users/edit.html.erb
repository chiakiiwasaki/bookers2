<p id="notice"></p>

<h2>User info</h2>
<%= form_with model:@user, local:true do |f| %>
  <div>
    <label>Name</label>
    <%= f.text_field :name %>
  </div>
  <div>
    <label>Image</label>
    <%= f.attachment_field :profile_image %>
  </div>
  <div>
    <label>Introduction</label>
    <%= f.text_area :introduction %>
  </div>
  <div><%= f.submit "Update User" %></div>
<% end %>