<p id="notice"></p>

<div>
  <h2>User info</h2>
  <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
  <table>
    <tbody>
      <tr></tr>
      <tr>
        <th>name</th>
        <th><%= @user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= @user.introduction %></th>
      </tr>
    </tbody>
  </table>

  <div><%= link_to 'Edit', edit_user_path(current_user.id) %></div>

  <h2>New book</h2>
  <%= form_with model:@new_book, local:true do |f| %>
    <div>
      <lable>Title</label>
      <%= f.text_field :title %>
    </div>
    <div>
      <label>Opinion</label>
      <%= f.text_area :body %>
    </div>
    <div><%= f.submit 'Create book' %></div>
  <% end %>
</div>

<div>
  <h2>Books</h2>
  <table>
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @user.books.each do |book| %>
      <tr>
         <td><%= attachment_image_tag @user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg" %></td>
         <td><%= link_to book.title, book_path(book.id) %></td>
         <td><%= book.body %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>